<header class="header">
    <div class="">
        {{>logo}}
    </div>

    <div class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </div>
</header>

<main class="main">
    {{#with info}}
    <div class="main_info">
        <h1 class="main_title">{{title}}</h1>
        <p class="main_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <h6 class="upd_title">{{title}}</h6>
    {{#each list}}
    <div class="upd_list">
        <div class="upd_logo"></div>
        <div class="upd_text">
            <p class="upd_name">{{nickname}}</p>
            <p class="upd_des">{{description}}</p>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="upd_link">{{text}}</a>
    {{/with}}
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>

<div class="expirience">
    {{#with expirience}}
    <strong class="exp_title">{{title}}</strong>
    <div class="exp_block">
        {{#each list}}
        <div class="exp_list">
            <p class="exp_name">{{name}}</p>
            <p class="exp_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>