<header class="header">
    <div class="">
        {{>logo}}
    </div>

    <div class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </div>
</header>

{{#with main}}
<main class="hero">
    <img src="{{image}}" alt="Hero image" class="hero_image">
    <div class="hero_content">
        <h1 class="hero_title">{{heading}}</h1>
        <p class="hero_text">{{descriotion}}</p>
        <a class="button hero_button" href="{{href}}">{{button}}</a>
    </div>
</main>
{{/with}}


<div class="featured">
    {{#each featured}}
    <div class="card">
        <img class="card_photo" src="{{photo}}" alt="Card photo">
        <h2 class="card_title">{{heading}}</h2>
        <p class="card_text">{{info}}</p>
        <a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
    </div>
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
    <div class="card_form">
        <h2 class="form_content">{{heading}}</h2>
        <a href="{{url}}" class="button form_button">{{text}}</a>
    </div>
    {{/each}}
</div>


<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>