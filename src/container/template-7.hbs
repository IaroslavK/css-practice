<header class="headerDark">
    {{>headerDark data=header}}
</header>

<div class="hero">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    {{#with button}}
    <a href="{{url}}" class="hero_button">{{text}}</a>
    {{/with}}
    {{/with}}
</div>

<div class="about">
    {{#with about}}
    <h2 class="about_title">{{heading}}</h2>
    <p class="about_text">{{info}}</p>
    {{/with}}
</div>

<div class="articles">
    <div class="articles_header">
        <h3 class="articles_title">Our Articles</h3>
        <a href="#" class="articles_button">View All</a>
    </div>
    <div class="articles_card_box">
        {{>articleCardDark data=articles}}
    </div>
</div>

<footer class="footer">
    {{>footerDark data=footer}}
</footer>